<element id="{$id}" width="100%" height="auto" value="{$value}" selected="{$selected}">
	<!-- unfocused, unselected, no mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,focussed,selected,mouseover" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#000000" />
	<!-- unfocused, unselected, mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,focussed,selected" show-on="mouseover" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#000000" background-color="#8080c0" />
	<!-- unfocused, selected, no mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,focussed,unselected,mouseover" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#ffffff" background-color="#8080a0" />
	<!-- unfocused, selected, mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,focussed,unselected" show-on="mouseover" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#ffffff" background-color="#8080c0" />
	<!-- focussed, unselected -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,selected" show-on="focussed" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" background-color="#FF4040" color="#000000" />
	<!-- focussed, selected -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,unselected" show-on="focussed" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" background-color="#FF4040" color="#FFFFFF" />
	<!-- disabled, unselected -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="selected" show-on="disabled" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#D0D0D0" />
	<!-- disabled, selected -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="unselected" show-on="disabled" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#D0D0D0" background-color="#C0C0C0" />
</element>
