<element id="{$id}" width="{$width}" height="{$height}" background-color="#f0f0f0" border="1" border-color="#000000" name="{$name}" focusable="true">
	<layout alignment="vertical" width="100%">
		<layout id="{$id}_layout_vertical" alignment="vertical" vertical-align="center" horizontal-align="center" background-color="#f0f0f0" width="100%">
			<layout id="{$id}_layout_horizontal" width="100%" padding="10" alignment="horizontal">
				<text id="{$id}_text" width="*" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#000000" />
				<element id="{$id}_arrow" width="auto" height="100%" vertical-align="center">
					<!-- Image needs transparency and white arrow so that I can do effects on it -->
					<image effect-color-mul="#8080A0" hide-on="opened,mouseover" src="resources/gui/images/elements/dropdown/expand-arrow.png" vertical-align="center" />
					<image effect-color-mul="#8080FF" hide-on="opened" src="resources/gui/images/elements/dropdown/expand-arrow.png" vertical-align="center" />
					<image effect-color-mul="#8080A0" hide-on="closed,mouseover" src="resources/gui/images/elements/dropdown/collapse-arrow.png" vertical-align="center" />
					<image effect-color-mul="#8080FF" hide-on="closed" src="resources/gui/images/elements/dropdown/collapse-arrow.png" vertical-align="center" />
				</element>
			</layout>
			<layout id="{$id}_layout_children" border="1" border-color="#ff4040" padding="10" width="100%" height="auto" alignment="vertical" show-on="opened" flow="floating" background-color="#f0f0f0">
				{$innerXml}
			</layout>
		</layout>
	</layout>
</element>