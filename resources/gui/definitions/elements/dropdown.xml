<element id="{$id}" width="{$width}" height="{$height}" background-color="#f0f0f0">
	<layout alignment="vertical" width="100%">
		<panel id="{$id}_panel" alignment="vertical" vertical-align="center" horizontal-align="center" background-color="#f0f0f0" width="100%">
			<panel width="100%" border="1" padding="{$padding}" alignment="horizontal">
				<text id="{$id}_panel_text" width="*" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#000000" />
				<element id="{$id}_panel_arrow" width="auto" height="100%" vertical-align="center">
					<!-- Needs to inject "open" condition here to element or somehow access parent element conditions -->
					<!-- Image needs transparency and white arrow so that I can do effects on it -->
					<image hide-on="open" src="resources/gui/images/elements/dropdown/expand-arrow.png" vertical-align="center" />
					<image show-on="open" src="resources/gui/images/elements/dropdown/collapse-arrow.png" vertical-align="center" />
				</element>
			</panel>
			<panel id="{$id}_panel_panel" border="1" border-top="0" border-color="black" padding="{$padding}" width="100%" height="auto" alignment="vertical" show-on="open" flow="floating" background-color="#f0f0f0">
				{$innerXml}
			</panel>
		</panel>
	</layout>
</element>