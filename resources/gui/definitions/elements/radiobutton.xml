<element id="{$id}" name="{$name}" value="{$value}" selected="{$selected}" disabled="{$disabled}" focusable="true">
	<!-- unselected, no mouse over -->
	<image effect-color-mul="#8080A0" hide-on="disabled,focus,selected,mouseover" src="resources/gui/images/elements/radiobutton/unselected.png" />
	<!-- unselected, mouse over -->
	<image effect-color-mul="#8080FF" hide-on="disabled,focus,selected" show-on="mouseover" src="resources/gui/images/elements/radiobutton/unselected.png" />
	<!-- selected, no mouse over -->
	<image effect-color-mul="#8080A0" hide-on="disabled,focus,unselected,mouseover" src="resources/gui/images/elements/radiobutton/selected.png" />
	<!-- selected, mouse over -->
	<image effect-color-mul="#8080FF" hide-on="disabled,focus,unselected" show-on="mouseover" src="resources/gui/images/elements/radiobutton/selected.png" />
	<!-- unselected, focus -->
	<image effect-color-mul="#FF4040" hide-on="disabled,selected" show-on="focus" src="resources/gui/images/elements/radiobutton/unselected.png" />
	<!-- selected, focus -->
	<image effect-color-mul="#FF4040" hide-on="disabled,unselected" show-on="focus" src="resources/gui/images/elements/radiobutton/selected.png" />
	<!-- unselected, disabled -->
	<image effect-color-mul="#E0E0E0" hide-on="selected" show-on="disabled" src="resources/gui/images/elements/radiobutton/unselected.png" />
	<!-- selected, disabled -->
	<image effect-color-mul="#E0E0E0" hide-on="unselected" show-on="disabled" src="resources/gui/images/elements/radiobutton/selected.png" />
</element>
