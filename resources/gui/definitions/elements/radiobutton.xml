<element id="{$id}" name="{$name}">
	<!-- unselected, no mouse over -->
	<image effect-color-mul="#8080A0" hide-on="selected,mouseover" src="resources/gui/images/elements/radiobutton/unselected.png" />
	<!-- unselected, mouse over -->
	<image effect-color-mul="#8080FF" hide-on="selected" show-on="mouseover" src="resources/gui/images/elements/radiobutton/unselected.png" />
	<!-- selected, no mouse over -->
	<image effect-color-mul="#8080A0" hide-on="unselected,mouseover" src="resources/gui/images/elements/radiobutton/selected.png" />
	<!-- selected, mouse over -->
	<image effect-color-mul="#8080FF" hide-on="unselected" show-on="mouseover" src="resources/gui/images/elements/radiobutton/selected.png" />
</element>
