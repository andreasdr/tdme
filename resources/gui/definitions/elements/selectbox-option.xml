<element id="{$id}" width="100%" height="auto" value="{$value}" selected="{$selected}">
	<!-- unselected, no mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,selected,mouseover" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#000000" />
	<!-- unselected, mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,selected" show-on="mouseover" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#000000" background-color="#8080c0" />
	<!-- selected, no mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,unselected,mouseover" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#ffffff" background-color="#8080a0" />
	<!-- selected, mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,unselected" show-on="mouseover" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#ffffff" background-color="#8080c0" />
	<!-- unselected, disabled -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="selected" show-on="disabled" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#D0D0D0" />
	<!-- selected, disabled -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="unselected" show-on="disabled" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#D0D0D0" background-color="#C0C0C0" />
</element>
