<element id="{$id}" width="100%" height="auto">
	<!-- unselected, no mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="selected,mouseover" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#000000" />
	<!-- unselected, mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="selected" show-on="mouseover" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#000000" background-color="#8080c0" />
	<!-- selected, no mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="unselected,mouseover" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#000000" background-color="#8080a0" />
	<!-- selected, mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="unselected" show-on="mouseover" font="resources/gui/fonts/Foo_25.fnt" text="{$text}" color="#000000" background-color="#8080c0" />
</element>
