<screen id="test">
	<panel border="1" border-color="#ffffff" left="5%" top="5%" width="90%" height="90%" alignment="vertical"
		background-color="#808080" horizontal-align="center"> 
		<space height="5%" />
		<panel width="80%" padding="10" border="1" border-color="red" alignment="none" horizontal-align="center" vertical-align="center" background-color="#909090">
			<text font="resources/gui/fonts/Foo_75.fnt" text="test headline" color="#ffffff" />
		</panel>
		<space height="5%" />
		<tabs width="100%" height="*">
			<tabs-header>
				<tab id="tab1" text="Radio + Checkbox" />
				<tab id="tab2" text="Selectbox" />
				<tab id="tab3" text="Buttons" />
				<tab id="tab4" text="Dropdown" />
			</tabs-header>
			<tabs-content>
				<tab-content tab-id="tab1">
					<panel width="100%" height="100%" padding="10" horizontal-align="center" alignment="horizontal">
						<panel border="1" padding="10" alignment="vertical" vertical-align="center" horizontal-align="center" background-color="#f0f0f0" width="50%">
							<panel padding="2" width="100%" alignment="horizontal">
								<checkbox id="checkbox1" />
								<space width="10" />
								<text width="*" font="resources/gui/fonts/Foo_25.fnt" text="Check me!" color="#000000" height="100%" vertical-align="center" />
							</panel>
							<panel padding="2" width="100%" alignment="horizontal">
								<checkbox id="checkbox2" />
								<space width="10" />
								<text width="*" font="resources/gui/fonts/Foo_25.fnt" text="No! Check me!" color="#000000" height="100%" vertical-align="center"  />
							</panel>
							<panel padding="2" width="100%" alignment="horizontal">
								<checkbox id="checkbox3" />
								<space width="10" />
								<text width="*" font="resources/gui/fonts/Foo_25.fnt" text="Rather check me!" color="#000000" height="100%" vertical-align="center" />
							</panel>
						</panel>
						<panel border="1" padding="10" alignment="vertical" vertical-align="center" horizontal-align="center" background-color="#f0f0f0" width="50%">
							<panel padding="2" width="100%" alignment="horizontal">
								<radiobutton id="radio1" value="radio" />
								<space width="10" />
								<text width="*" font="resources/gui/fonts/Foo_25.fnt" text="Select me!" color="#000000" />
							</panel>
							<panel padding="2" width="100%" alignment="horizontal">
								<radiobutton id="radio2" value="radio" />
								<space width="10" />
								<text width="*" font="resources/gui/fonts/Foo_25.fnt" text="No! Select me!" color="#000000" />
							</panel>
							<panel padding="2" width="100%" alignment="horizontal">
								<radiobutton id="radio3" value="radio" />
								<space width="10" />
								<text width="*" font="resources/gui/fonts/Foo_25.fnt" text="Do select me!" color="#000000" />
							</panel>
						</panel>
					</panel>
				</tab-content>
				<tab-content tab-id="tab2">
					<panel padding="10" horizontal-align="center" alignment="vertical" width="100%">
						<space height="*" />
						<panel padding="10" horizontal-align="center" alignment="none" width="80%">
							<panel border="1" padding="10" alignment="horizontal" vertical-align="center" horizontal-align="center" background-color="#f0f0f0" width="80%">
								<text font="resources/gui/fonts/Foo_25.fnt" text="Some" color="#000000" />
								<space width="10" />
								<text font="resources/gui/fonts/Foo_25.fnt" text="text" color="#000000" />
								<space width="10" />
								<text font="resources/gui/fonts/Foo_25.fnt" text="here" color="#000000" />
							</panel>
						</panel>
						<space height="*" />
						<panel padding="10" horizontal-align="center" alignment="none" width="80%">
							<selectbox id="select">
								<selectbox-option id="select1" text="Select Me!" />
								<selectbox-option id="select2" text="Why not selecting me?" />
								<selectbox-option id="select3" text="You should select me" />
							</selectbox>
						</panel>
						<space height="*" />
					</panel>
				</tab-content>
				<tab-content tab-id="tab3">
					<panel padding="10" horizontal-align="center" alignment="vertical" width="100%" height="100%">
						<space height="*" />
						<element horizontal-align="center" vertical-align="center">
							<image hide-on="mouseover,click" src="resources/gui/images/button_normal.png" horizontal-align="center" vertical-align="center" />
							<image show-on="mouseover" src="resources/gui/images/button_mouseover.png" horizontal-align="center" vertical-align="center" />
							<image show-on="click" src="resources/gui/images/button_click.png" horizontal-align="center" vertical-align="center" />
							<text font="resources/gui/fonts/Foo_25.fnt" text="ImageBtn!" color="#ffffff" horizontal-align="center" vertical-align="center" />
						</element>
						<space height="*" />
						<button id="test_text_button" text="Test text button" />
						<space height="*" />
					</panel>
				</tab-content>
				<tab-content tab-id="tab4">
					<panel padding="10" horizontal-align="center" alignment="vertical" width="100%" height="100%">
						<panel padding="10" horizontal-align="center" alignment="vertical" width="80%">
							<dropdown text="Click me and select a drop down option">
								<dropdown-option id="dropdown1" text="I am a good option!" />
								<dropdown-option id="dropdown2" text="Me feels better I guess?!" />
								<dropdown-option id="dropdown3" text="Just opt for me!" />
							</dropdown>
							<space height="20" />
							<text font="resources/gui/fonts/Foo_25.fnt" text="Lorem ipsum dolor sit amet," color="#000000" />
							<text font="resources/gui/fonts/Foo_25.fnt" text="consetetur sadipscing elitr," color="#000000" />
							<text font="resources/gui/fonts/Foo_25.fnt" text="sed diam nonumy eirmod tempor invidunt " color="#000000" />
							<text font="resources/gui/fonts/Foo_25.fnt" text="ut labore et dolore magna aliquyam erat" color="#000000" />
							<text font="resources/gui/fonts/Foo_25.fnt" text="sed diam voluptua." color="#000000" />
						</panel>
					</panel>
				</tab-content>
			</tabs-content>
		</tabs>
	</panel>
</screen>