<screen id="modellibrary" background-color="#202020">
	<layout alignment="vertical" width="100%" height="100%">
		<panel alignment="none" width="100%" height="auto" padding="5">
			<text font="resources/gui/fonts/Foo_25.fnt" text="Model Library" width="auto" height="auto"/>
		</panel>
		<space height="*"/>
		<panel width="100%" height="200">
			<tabs alignment="vertical" width="100%" height="100%">
				<tabs-header>
					<tab id="tabs_properties_display" text="Display" />
					<tab id="tabs_properties_model" text="Model" />
					<tab id="tabs_properties_object_properties" text="Model Properties" />
					<tab id="tabs_properties_pivot" text="Pivot" />
					<tab id="tabs_properties_boundingvolume" text="Bounding Volume" />
					<tab id="tabs_properties_stats" text="Statistics" />
				</tabs-header>
				<tabs-content>
					<tab-content tab-id="tabs_properties_display" vertical-align="center">
						<layout width="auto" height="auto" alignment="vertical">
							<layout width="auto" height="auto" alignment="horizontal">
								<checkbox id="display_ground" name="display_ground" value="1" />
								<space width="5" />
								<text font="resources/gui/fonts/Foo_25.fnt" text="Ground" width="120" height="auto"/>
								<space width="20" />
								<checkbox id="display_shadowing" name="display_shadowing" value="1" />
								<space width="5" />
								<text font="resources/gui/fonts/Foo_25.fnt" text="Shadowing" width="120" height="auto"/>
							</layout>
							<space height="5" />
							<layout width="auto" height="auto" alignment="horizontal">
								<checkbox id="display_boundingvolume" name="display_boundingvolume" value="1" />
								<space width="5" />
								<text font="resources/gui/fonts/Foo_25.fnt" text="Bounding Volume" width="auto" height="auto"/>
							</layout>
							<space height="20" />
							<layout width="100%" height="auto" alignment="none" horizontal-align="center">
								<button id="button_display_apply" name="button_display_apply" text="Apply" />
							</layout>
						</layout>
					</tab-content>
					<tab-content tab-id="tabs_properties_model" vertical-align="center">
						<layout width="auto" height="auto" alignment="vertical">
							<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
								<text font="resources/gui/fonts/Foo_25.fnt" text="Name" width="200" height="auto"/>
								<space width="5" />
								<input id="model_name" name="model_name" width="200" height="auto" text="Name" />
							</layout>
							<space height="5" />
							<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
								<text font="resources/gui/fonts/Foo_25.fnt" text="Description" width="200" height="auto"/>
								<space width="5" />
								<input id="model_description" name="model_description" width="200" height="auto" text="Description" />
							</layout>
							<space height="20" />
							<layout width="100%" height="auto" alignment="horizontal">
								<button id="button_model_load" name="button_model_load" text="Load" />
								<space width="*" />
								<button id="button_model_reload" name="button_model_reload" text="Reload" />
								<space width="*" />
								<button id="button_model_save" name="button_model_save" text="Save" />
								<space width="*" />
								<button id="button_model_apply" name="button_model_apply" text="Apply" />
							</layout>
						</layout>
					</tab-content>
					<tab-content tab-id="tabs_properties_object_properties" vertical-align="center">
						<layout width="auto" height="auto" alignment="horizontal">
							<layout width="auto" height="auto" alignment="vertical">
								<layout width="auto" height="auto" alignment="horizontal">
									<dropdown id="objectproperties_presets" name="objectproperties_presets" width="510" height="auto" text="Test">
										<dropdown-option text="Option A" value="1" />
										<dropdown-option text="Option B" value="2" />
									</dropdown>
									<space width="10" />
									<button id="button_object_properties_presetapply" name="button_object_properties_presetapply" text="Apply" width="80" />
								</layout>
								<space height="10" />
								<selectbox id="objectproperties_listbox" name="objectproperties_listbox">
									<selectbox-option text="Option A" value="1" />
									<selectbox-option text="Option B" value="2" />
								</selectbox>
								<space height="10" />
								<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
									<text font="resources/gui/fonts/Foo_25.fnt" text="Name" width="45" height="auto"/>
									<space width="*" />
									<input id="object_property_name" name="object_property_name" width="240" height="auto" text="Name" />
									<space width="*" />
									<text font="resources/gui/fonts/Foo_25.fnt" text="Value" width="45" height="auto"/>
									<space width="*" />
									<input id="object_property_value" name="object_property_value" width="240" height="auto" text="Value" />
								</layout>
							</layout>
							<space width="20" />
							<layout width="auto" height="auto" alignment="vertical">
								<button id="button_object_properties_add" name="button_object_properties_add" text="Add" width="80" />
								<space height="5" />
								<button id="button_object_properties_remove" name="button_object_properties_remove" text="Remove" width="80" />
								<space height="5" />
								<button id="button_object_properties_save" name="button_object_properties_save" text="Save" width="80" />
							</layout>
						</layout>
					</tab-content>
					<tab-content tab-id="tabs_properties_pivot">
						<layout width="auto" height="auto" alignment="vertical">
							<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
								<text font="resources/gui/fonts/Foo_25.fnt" text="X" width="50" height="auto" />
								<space width="5" />
								<input id="pivot_x" name="pivot_x" width="150" height="auto" text="X" />
							</layout>
							<space height="5" />
							<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
								<text font="resources/gui/fonts/Foo_25.fnt" text="Y" width="50" height="auto" />
								<space width="5" />
								<input id="pivot_y" name="pivot_y" width="150" height="auto" text="Y" />
							</layout>
							<space height="5" />
							<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
								<text font="resources/gui/fonts/Foo_25.fnt" text="Z" width="50" height="auto" />
								<space width="5" />
								<input id="pivot_z" name="pivot_z" width="150" height="auto" text="Z" />
							</layout>
							<space height="20" />
							<layout width="100%" height="auto" alignment="none" horizontal-align="center">
								<button id="button_pivot_apply" name="button_pivot_apply" text="Apply" />
							</layout>
						</layout>
					</tab-content>
					<tab-content tab-id="tabs_properties_boundingvolume" vertical-align="top">
						<layout width="auto" height="auto" alignment="vertical">
							<space height="10" />
							<layout width="auto" height="auto" alignment="horizontal">
								<dropdown id="boundingvolume_type" name="boundingvolume_type" width="530" height="auto" text="Test">
									<dropdown-option text="Option A" value="1" />
									<dropdown-option text="Option B" value="2" />
								</dropdown>
								<space width="10" />
								<button id="button_boundingvolume_apply" name="button_boundingvolume_apply" text="Apply" width="60" />
							</layout>
						</layout>
					</tab-content>
					<tab-content tab-id="tabs_properties_stats" vertical-align="center">
						<layout width="auto" height="auto" alignment="vertical">
							<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
								<text font="resources/gui/fonts/Foo_25.fnt" text="Opaque faces" width="200" height="auto" />
								<space width="5" />
								<input id="stats_opaque_faces" name="stats_opaque_faces" width="150" height="auto" text="A" disabled="true" />
							</layout>
							<space height="5" />
							<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
								<text font="resources/gui/fonts/Foo_25.fnt" text="Transparent faces" width="200" height="auto" />
								<space width="5" />
								<input id="stats_transparent_faces" name="stats_transparent_faces" width="150" height="auto" text="B" disabled="true" />
							</layout>
							<space height="5" />
							<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
								<text font="resources/gui/fonts/Foo_25.fnt" text="Material count" width="200" height="auto" />
								<space width="5" />
								<input id="stats_material_count" name="stats_material_count" width="150" height="auto" text="C" disabled="true" />
							</layout>
						</layout>
					</tab-content>
				</tabs-content>
			</tabs>
		</panel>
	</layout>
</screen>